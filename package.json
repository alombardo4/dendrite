{
  "name": "dendrite",
  "version": "1.0.0",
  "description": "An event-sourcing library for NodeJS",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test": "jest",
    "test:w": "jest --watch",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --testResultsProcessor=\"jest-junit\"",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alombardo4/dendrite.git"
  },
  "author": "Alec Lombardo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alombardo4/dendrite/issues"
  },
  "homepage": "https://github.com/alombardo4/dendrite#readme",
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/uuid": "^8.3.4",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "kafkajs": "^2.2.3",
    "mongodb": "^4.12.1",
    "rxjs": "^7.5.7",
    "ts-jest": "^29.0.3",
    "tslint": "^5.20.1",
    "typescript": "^4.9.3",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "kafkajs": "~2.2.3",
    "mongodb": ">=4.12.1",
    "rxjs": "~7.5.7",
    "uuid": "~9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/**/*.spec.(ts|js)"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
